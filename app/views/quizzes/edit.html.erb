<div class="container">
  <div class="row">

    <div class="col-sm-1">
    </div>

    <div class="col-sm-10 text-center">
      <%= form_for(@quiz, :url => { controller:'quizzes', action:'update'})do |f| %>
      <%= f.label :問題を入力してください %>
      <br>
      <%= f.text_field :question, :class => "form-control" %>
      <br>
      <%= f.label :答えを入力してください %>
      <br>
      <%= f.text_field :right_answer, :class => "form-control" %>
      <br>
      <%= f.submit class: "btn btn-primary" %>
      <br>
      <% end %>
    </div>

    <div class="col-sm-1">
    </div>
  </div>
</div>
