<div class="container">
  <div class="row">
    <div class="col-md-1">

    </div>
    <div class="col-md-10 text-center">
      <h1 class="font-weight-bold">新規登録</h1>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div><%= f.label :name %><br />
        <%= f.text_field :name, class: "col-md-12 form-control"%></div>

        <div><%= f.label :password %><br />
          <%= f.password_field :password, class: "col-md-12 form-control" %></div>

          <div><%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, class: "col-md-12" %></div>

            <div><%= f.submit "Sign up", class: "btn btn-primary" %></div>
            <% end %>

            <%= render "users/shared/links" %>
          </div>
          <div class="col-md-1">

          </div>
        </div>
      </div>
